<body>
    <h1>Formulario Avanzado de Registro</h1>
    <form id="contactForm">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>

        <label for="apellidos">Apellidos:</label>
        <input type="text" id="apellidos" name="apellidos" required>

        <label for="correo">Correo Electrónico:</label>
        <input type="email" id="correo" name="correo" required>

        <button type="submit">Enviar</button>
    </form>
    <div id="message" class="message"></div>

    <script>
        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Evita el envío por defecto

            const formData = new FormData(this);
            const data = {
                nombre: formData.get('nombre'),
                apellidos: formData.get('apellidos'),
                correo: formData.get('correo')
            };

            // Usando EmailJS para enviar el email (requiere configuración previa)
            // Primero, instala EmailJS: npm install emailjs-com (o incluye el script desde CDN)
            // Crea una cuenta en https://www.emailjs.com/ y configura un servicio de email (ej. Gmail)

            // Ejemplo de configuración (reemplaza con tus claves reales)
            const serviceID = 'service_fa96mdm'; // Obtén esto de EmailJS
            const templateID = 'template_ru9fiho'; // Crea un template en EmailJS
            const userID = 'belem.sexygirl@gmail.com'; // Tu ID de usuario en EmailJS

            emailjs.send(serviceID, templateID, data, userID)
                .then(function(response) {
                    document.getElementById('message').innerHTML = '<p style="color: green;">¡Mensaje enviado exitosamente!</p>';
                    document.getElementById('contactForm').reset();
                }, function(error) {
                    document.getElementById('message').innerHTML = '<p style="color: red;">Error al enviar el mensaje. Inténtalo de nuevo.</p>';
                    console.error('Error:', error);
                });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/emailjs.min.js"></script>
</body>
</html>
